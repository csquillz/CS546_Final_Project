<div>
    <h1 class="index-header">{{title}}</h1>
    <div class ="form">
        <form action="/login" method="POST" id='login-form'>
            <label for="usernameText">Enter usernname: </label><br>
            <input type="text" id="usernameText" name="username" /><br>
            <label for="passwordText">Enter password: </label><br>
            <input type="password" id="passwordText" name="password" /><br>
            <button type="submit">Login</button>
        </form>
    </div>
    <div class= "login-err-msg">  
        {{#if error}}
            <p class="err-msg">{{error}}</p>
        {{/if}}
    </div>
</div>